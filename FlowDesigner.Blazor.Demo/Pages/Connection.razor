@inherits ConnectionBase


<g id="@(Connection.Id.ToString())">
    <path d="@Connection.Path" stroke="black" fill="transparent" />
    <circle cx="@(Connection.Item1.AnchorPoint.X * 10)" cy="@(Connection.Item1.AnchorPoint.Y * 10)" r="@(Connection.Item1.ConnectionPointSize.X * 10)" stroke="black" stroke-width="2" fill="red" />
    <circle cx="@(Connection.Item2.AnchorPoint.X * 10)" cy="@(Connection.Item2.AnchorPoint.Y * 10)" r="@(Connection.Item2.ConnectionPointSize.X * 10)" stroke="black" stroke-width="2" fill="red" />
</g>