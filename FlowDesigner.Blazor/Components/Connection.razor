@inherits ConnectionBase


<g id="@(Connection.Id.ToString())">
    <polyline points="@Connection.Path" style="fill:none;stroke:@(Connection.BorderColor.ToKnownColor());stroke-width:3" />
    <circle cx="@(Connection.Item1.AnchorPoint.X * 10)" cy="@(Connection.Item1.AnchorPoint.Y * 10)" r="@(Connection.Item1.ConnectionPointSize * 10.0f)" stroke="@(Connection.BorderColor.ToKnownColor())" stroke-width="3" fill="white" />
    <circle cx="@(Connection.Item2.AnchorPoint.X * 10)" cy="@(Connection.Item2.AnchorPoint.Y * 10)" r="@(Connection.Item2.ConnectionPointSize * 10.0f)" stroke="@(Connection.BorderColor.ToKnownColor())" stroke-width="3" fill="white" />
</g>